# IBM Watsonx.ai Credentials
# Get these from: https://cloud.ibm.com
WATSONX_AI_APIKEY=your_api_key_here
WATSONX_AI_PROJECT_ID=your_project_id_here
WATSONX_AI_URL=https://us-south.ml.cloud.ibm.com
WATSONX_AI_AUTH_TYPE=iam
WATSONX_AI_VERSION=2024-05-31

# Optional: If you have SSL certificate issues
# WATSONX_AI_DISABLE_SSL=true
# WATSONX_AI_AUTH_DISABLE_SSL=true

# Salesforce CRM Integration (Optional for MVP - can use mock)
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
SALESFORCE_USERNAME=your_salesforce_username
SALESFORCE_PASSWORD=your_salesforce_password
SALESFORCE_SECURITY_TOKEN=your_salesforce_security_token

# Application Settings
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# Database (if using PostgreSQL instead of SQLite)
# DATABASE_URL=postgresql://user:password@localhost:5432/meetingflow

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
